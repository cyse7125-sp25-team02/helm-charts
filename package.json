{
  "name": "helm-charts",
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "semantic-release-helm",
        {
          "chartPath": "./",
          "onlyUpdateVersion": true
        }
      ],
      "@semantic-release/github"
    ]
  },
  "devDependencies": {
    "semantic-release": "^24.2.3",
    "semantic-release-helm": "^2.2.0"
  }
}
